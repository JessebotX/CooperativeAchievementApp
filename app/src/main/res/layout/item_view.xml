<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="85dp"
        android:layout_height="94dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/theme_0_level_0" />

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0C0C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_num_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0C0C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0C0C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0C0C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E0C0C"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/game_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        tools:layout_editor_absoluteX="3dp"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>